.vcard-container
  .layer
    / |
    / = link_to_qr_code(@user)
    = image_tag("http://graph.facebook.com/#{current_user.facebook_info.uid}/picture", :class => "avatar")
    %h1.name= current_user.facebook_info.user_name
    = link_to "Your card" , card_landing_path(@user.slug), :popup => true
    %br{:style => "clear:both;"}/
    .panel
      .social
        %ul
          %li.qrcode.last-right.last-left
            #middle
              = image_tag_qr_code(@user)
            #right
              %p Preview your show page by scanning your QR Code!
              %p Download Friend Scan Me on your phone! #{ link_to image_tag("/assets/icn-androidstore.png"), "#" }
            %br{:style=> "clear:both"}/
