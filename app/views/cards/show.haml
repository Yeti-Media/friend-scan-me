.top_bar
  %a{ :href => "/" }friendscan.me
#wrap
  .starburst
    = render :partial => 'flash', :locals => {:flash => flash}
    - if current_user
      .top_nav
        = link_to "Home", "/"
        |
        = link_to "Edit", "/cards/#{@user.slug}/edit"
        |
        = link_to "Sign Out", signout_path , :method => :delete 
    .vcard-container
      .layer
        = image_tag("http://graph.facebook.com/#{@user.facebook_info.uid}/picture", :class => "avatar")
        %h1.name= @user.facebook_info.user_name
        .panel
          .social
            %ul
              %li.facebook.last-left.last-right
                = link_to_add_facebook_friend(@user)
              %li.get-app
                = link_to "Who is scanning you?", "/auth/facebook"
          
    %br{:style => "clear:both"}/
    = render :partial => 'footer'