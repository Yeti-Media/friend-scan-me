.top_bar
  =link_to image_tag("fsm_logo_topbar.png"), "/"
#wrap
  .starburst
    = render :partial => 'flash', :locals => {:flash => flash}
    - if current_user
      .top_nav
        .w100      
          = select_tag :locale, options_for_select(['en', 'es'] , params[:locale]), :"data-native-menu" => "false"
        = link_to t('nav.home'), locale_home_path
        |
        = t('nav.edit')
        |
        = link_to t('nav.show') , card_landing_path(@user.slug)
        |
        - if !is_mobile_device?
          = link_to t("nav.sign_out"), signout_path , :method => :delete
      .vcard-container
        .layer
          .card-header
            - if @user.has_social?(:facebook)
              = image_tag("http://graph.facebook.com/#{@user.facebook_info.uid}/picture", :class => "avatar")
            - elsif @user.has_social?(:twitter)
              = image_tag("https://api.twitter.com/1/users/profile_image?screen_name=#{@user.twitter_info.user_name}", :class => "avatar")
            %h1.name= current_user.name
            - if !is_mobile_device?
              = link_to t("cards.edit.view_your_qr_code"), "javascript:void(0)", :class => 'qr-code-link'
              = link_to t("cards.edit.bookmark_your_card"), "javascript:void(0)", :class => 'bookmark-link'
          .panel
            .social
              -#%nav.silvergradient
                %ul
                  %li #{link_to "Home", "/"}
                  %li #{link_to "Add as Friend", "#"}
                  %li #{link_to "Card", card_landing_path(@user.slug)}
              %ul
                %li.qrcode          
                  - if is_mobile_device?
                    #center
                      .image
                        = image_tag_qr_code(@user)
                      .copy-odd
                        Scan this QR code and add
                        = t('cards.edit.scan_legend_1')
                        %b= current_user.name
                        = t('cards.edit.scan_legend_2') 
                  - else
                    #center.bookmark
                      .image= bookmark_qr_code(@user)
                      .copy-odd
                        = t('cards.edit.scan_legend_1')
                        %b= t('cards.edit.bookmark_legend_1')
                        = t('cards.edit.bookmark_legend_2')
                    #center.your-qr-code
                      .image
                        = image_tag_qr_code(@user)
                      .copy-odd
                        = t('cards.edit.scan_legend_1')
                        %b
                          = t('cards.edit.qr_code_legend_1')
                          = current_user.name
                        = t('cards.edit.qr_code_legend_2')
                  %br{:style=> "clear:both"}/
                  - if !current_user.has_social?(:facebook)
                    %li.facebook
                      = link_to "Add Your Facebook Account" , "/auth/facebook"
                  - if !current_user.has_social?(:twitter)  
                    %li.twitter
                      = link_to "Add Your Twitter Account" , "/auth/twitter"
                  - if !current_user.has_social?(:linkedin)  
                    %li.linkedin
                      = link_to "Add Your Linkedin Account" , "/auth/linkedin"    
    = render :partial => 'footer'
    = render :partial => 'google_conversions'
