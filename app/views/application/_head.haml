%head
  = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Maven+Pro'
  = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Lobster'
  = stylesheet_link_tag 'application'
  %link{ :href => "/assets/icn-fsm.ico", :rel => "icon" }
  %link{ :href =>"/assets/apple-touch-icon.png", :rel => "apple-touch-icon" }
  
  = render :partial => "javascripts"

  %meta{:name => "apple-mobile-web-app-capable", :content => "yes" }/
  %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0", :name => "viewport" }/
  %meta{:name => "description", :content => "Friend Scan Me is a new way to add friends on Facebook in the real world. Friend Scan Me simplifies your life by translating your user name into a QR code. Compatible with any Smart Phone"}
  %meta{:name => "keywords", :content => "friend scan me, personalized qr code, scan, scanner, barcode, qr barcode, qr code, scanning app, smartphone, mobile, cell, 2d barcode, barcode reader"}
  %meta{:content => "friendscan.com", :property => "og:site_name"}/
  %meta{:content => "Friend Scan Me is a new way to add friends on Facebook in the real world. Friend Scan Me simplifies your life by translating your user name into a QR code.", :property => "og:description"}/
  %meta{:content => "Freiend Scan Me translating you into a QR code.", :property => "og:title"}/
  %meta{:content => "company", :property => "og:type"}/
  %meta{:content => "http://www.scanme.com/images/apple-touch-icon.png", :property => "og:image"}/
  %meta{:content => "http://friendscan.me", :property => "og:url"}/
  %meta{:content => "131951090214210", :property => "fb:app_id"}/
  %title #{title}
  