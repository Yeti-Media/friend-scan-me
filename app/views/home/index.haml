= render :partial => "facebook_js_sdk"
.top_bar
  = image_tag ("fsm_logo_topbar.png")
#wrap
  .starburst
    = render :partial => 'flash', :locals => {:flash => flash}
    .top_nav
      .w100      
        = select_tag :locale, options_for_select(['en', 'es'] , params[:locale]), :"data-native-menu" => "false"
      - if current_user
        %p.user_name
          = t('home.welcome')
          = current_user.name
        %p.user_name
          = link_to t('nav.show'), card_landing_path(current_user.slug), :"data-ajax" => "false"
          |
          = link_to t('nav.edit'), edit_card_path(current_user.slug), :"data-ajax" => "false"
          |
          = link_to t("nav.sign_out"), signout_path , :method => :delete, :"data-ajax" => "false"
      - else
    %section.wrapper
      .gutter1col
      .left_splash
        = image_tag ("phone_android.png"), :id => "phone_pic"
      .gutter1col
      %nav.right_splash
        %ul
          %li.fb
            = link_to t('home.facebook.connect') , "/auth/facebook",:id => "signin_", :"data-ajax" => "false"
          %li.tw.last
            = link_to t('home.twitter.connect') , "/auth/twitter",:id => "signin_", :"data-ajax" => "false"
        %h4= t('home.title1')
        %h4
          %span &nbsp;
          = t('home.title2')
    .orangeStripe
    .bg_mainContent
      .bgb
        .r1
          .gutter1col
          .d1
            .heading.wis
              %h1= t 'home.what_is_it'
          .d2
            %p= t 'home.wis1'
            %p= t 'home.wis2'
        .hr-dashed
        .r1
          .gutter1col
          .d1
            .heading.qrc
              %h1= t 'home.qr_code'
          .d2
            %p= t 'home.qrc'
        .hr-dashed
        .r1
          .gutter1col
          .d1
            .heading.hts
              %h1= t 'home.how_to_start'
          .d2
            %p= t 'home.hts1'
            %p= t 'home.hts2'
            .iphone
              = image_tag("logo-iphone.png")
            .android
            .blackberry
        .hr-dashed
      = render :partial => 'footer'
      = render :partial => 'social_marketing'
  
