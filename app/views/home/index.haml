= render :partial => "facebook_js_sdk"
.top_bar
  =image_tag ("fsm_logo_topbar.png")
#wrap
  .starburst
    = render :partial => 'flash', :locals => {:flash => flash}
    - if current_user
      .top_nav
        %p.user_name
          Welcome
          = current_user.name
        %p.user_name
          = link_to "Show", "/#{current_user.slug}"
          |
          = link_to "Edit", "/cards/#{current_user.slug}/edit"
          |
          = link_to "Sign Out", signout_path , :method => :delete
    - else
    %section.wrapper
      .gutter1col
      .left_splash
        = image_tag ("phone_android.png"), :id => "phone_pic"
      .gutter1col
      %nav.right_splash
        %ul
          %li.fb
            %a{:href => "/auth/facebook", :id => "signin_"}
              Connect with Facebook
          %li.tw.last
            %a{:href => 'auth/twitter' , :id => 'signin_'}
              Sign in with Twitter
        %h4 The easy way
        %h4
          %span &nbsp;
          to add friends.
    .orangeStripe
    .bg_mainContent
      .bgb
        .r1
          .gutter1col
          .d1
            = image_tag ("title-wis.png")
          .d2
            %p= t 'home.wis1'
            %p= t 'home.wis2'
        .hr-dashed
        .r1
          .gutter1col
          .d1
            = image_tag ("title-qrc.png")
          .d2
            %p= t 'home.qrc'
        .hr-dashed
        .r1
          .gutter1col
          .d1
            = image_tag ("title-hts.png")
          .d2
            %p= t 'home.hts1'
            %p= t 'home.hts2'
        .hr-dashed
      = render :partial => 'footer'
      = render :partial => 'social_marketing'
  
